  <head>
    <title>Discotroc - Nouveau Disque </title>
    <meta charset="UTF-8">
    <meta name="description" content="Discs New">
    <meta name="keywords" content="music, html">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link href="https://fonts.googleapis.com/css?family=Montserrat:300,300i,400,400i,500,500i,600,600i,700,700i&display=swap" rel="stylesheet">
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>
<body>
	<!-- /login-section -->
	<section class="w3l-login-6">
		<div class="login-hny">
			<div class="form-content">
				<div class="form-left" style="margin: 0 auto;">
					<div class="middle text-center">
          <%=image_tag "icons/disc_red.png", style:"width: 200px; height: 200px;"%>
          <br>
						<h4 class="text-center">Créer un disque</h4>
						<p class="text-center">Il ne vous restera plus qu'à l'ajouter dans votre librairie.</p>
					</div>
           <%= form_tag url_for(action: 'create'), method: "post" do %>
							<div class="form-input">
								<%= label_tag 'Titre' %>
							<%= text_field_tag 'title'%>
							</div>
             <div class="form-input">
                <%= label_tag 'Artiste' %>
               <%= text_field_tag 'artist' %>
             </div>
             <div class="form-input">
                <%= label_tag 'Année de création' %>
               <%= text_field_tag 'release' %>
             </div>
             <div class="form-input">
                <%= label_tag 'Format' %> <br>
               <%=select_tag "format_id", options_from_collection_for_select(Format.all, :id, :name), :class => "browser-default custom-select" %>
             </div>
             <div class="form-input">
                <%= label_tag 'Genre' %> <br>
               <%=select_tag "genre_id", options_from_collection_for_select(Genre.all, :id, :name), :class => "browser-default custom-select" %>
             </div>
             <div class="form-input">
                <%= label_tag 'Label' %>
               <%= text_field_tag 'label' %>
             </div>
              <div class="form-input">
                <%= label_tag 'Pays' %>
                <%= text_field_tag 'country' %>
             </div>
             <br>
             <div class="text-center">
							<%= submit_tag "Créer un disque", type: "submit", class: "site-btn text-center", style: "padding: 10px 20px"  %>
              </div>
              <%end%>
              <br>
					<div class="copy-right text-center">
						<%= link_to "Revenir à l'accueil", root_path%> <br>

					 </div>
				</div>

			</div>

		</div>
	</section>
	<!-- //login-section -->
</body>
