      <% if user_signed_in? %>
        Salut <%= current_user.first_name%>
    <%else %>
        Hey!
    <% end %>
<h6> Voici les dernier deals </h6>
  </div>
<div class="row demo-tiles">
<% search_sender_disc_home.each do |library| %>
        <div class="col">
          <div class="tile">
            <br>
            <br>
            <br>
            <h3 class="tile-title"><%= library.disc.title%></h3>
            <p><%= library.disc.artists.pluck(:name).join(" & ")%></p>
            <%= link_to "voir le deal", user_library_path(library.id), class:"btn btn-primary btn-large btn-block" %>
          </div>
        </div>
<%end %>
