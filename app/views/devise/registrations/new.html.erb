<div class="login-screen">
  <h2 class="text-dark">S'inscrire</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="login-form">
      <%= f.label :email, class: "text-dark" %><br />
      <%= f.email_field :email, class: "form-control login-field", autofocus: true, autocomplete: "email", placeholder: "Entrez votre email" %>
    </div>
    <div class="login-form">
      <%= f.label :password, class: "text-dark"  %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, class: "form-control login-field", autocomplete: "new-password", placeholder: "DÃ©finissez votre mot de passe" %>
    </div>
    <div class="login-form">
      <%= f.label :password_confirmation, class: "text-dark"  %><br />
      <%= f.password_field :password_confirmation, class: "form-control login-field", autocomplete: "new-password", placeholder: "Confirmez votre mot de passe" %>
    </div>
    <div class="login-form">
      <%= f.label :first_name, class: "text-dark"  %><br />
      <%= f.text_field :first_name, autofocus: true, class: "form-control login-field", autocomplete: "Prenom", required: true %>
    </div>
    <div class="login-form">
      <%= f.label :last_name, class: "text-dark"  %><br />
      <%= f.text_field :last_name, autofocus: true, class: "form-control login-field", autocomplete: "Nom", required: true %>
    </div>
    <div class="login-form">
      <%= f.label :address, class: "text-dark"  %><br />
      <%= f.text_field :address, autofocus: true, class: "form-control login-field", autocomplete: "Adress", required: true %>
    </div>
    <div class="login-form">
      <%= f.label :city, class: "text-dark"  %><br />
      <%= f.text_field :city, autofocus: true, class: "form-control login-field", autocomplete: "City", required: true %>
    </div>
    <div class="login-form">
      <%= f.label :country, class: "text-dark"  %><br />
      <%= f.text_field :country, autofocus: true, class: "form-control login-field", autocomplete: "Country", required: true %>
    </div>
    <div class="login-form">
      <%= f.label :zipcode, class: "text-dark"  %><br />
      <%= f.text_field :zipcode, autofocus: true, class: "form-control login-field", autocomplete: "ZipCode", required: true %>
    </div>
    <div class="login-form">
      <%= f.label :description, class: "text-dark"  %><br />
      <%= f.text_field :description, autofocus: true, class: "form-control login-field", autocomplete: "Description", required: true %>
    </div>
    <div class="login-form">
      <%= f.submit "S'inscrire", class: "btn btn-primary btn-lg btn-block text-dark"  %>
    </div>
  <% end %>
  <div class="login-link">
    <%= render "devise/shared/links" %>
  </div>
</div>
