<div class="login-screen">
  <h2 class="text-dark">Se connecter</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="login-form">
      <%= f.label :email, class: "text-dark" %><br />
      <%= f.email_field :email, class: "form-control login-field", autofocus: true, placeholder: "Entrez votre email", autocomplete: "email" %>
    </div>
    <div class="login-form">
      <%= f.label :password, "Mot de passe", class: "text-dark" %><br />
      <%= f.password_field :password, class: "form-control login-field", placeholder: "Entrez votre de passe", autocomplete: "current-password" %>
    </div>
    <% if devise_mapping.rememberable? %>
      <div class="login-form">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, "Se souvenir de moi", class: "text-dark" %>
      </div>
    <% end %>
    <div class="login-form">
      <%= f.submit "Se connecter", class: "btn btn-primary btn-lg btn-block text-dark" %>
    </div>
  <% end %>
  <div class="login-link">
    <%= render "devise/shared/links" %>
  </div>
</div>
