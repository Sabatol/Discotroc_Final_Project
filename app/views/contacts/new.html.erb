<div class="container">
  <h1 class="page_title text-center">Contactez-nous</h1>
  <form>
    <div class="form-group  ">
      <%= form_for @contact ,method: 'POST' do |f| %>
        <%=f.label :name%> <br>
        <%=f.text_field :name,class:'form-control',required: true%>
        <br>
        <%=f.label :email%> <br>
        <%=f.email_field :email,class:'form-control',required: true%>
        <br>
        <%=f.label :message%> <br>
        <%=f.text_area :message, class:'form-control',as: :text%>
        <div hidden>
          <%=f.label :nickname%> <br>
          <%=f.text_field :nickname, hint: 'leave this field blank'%>
        </div>
        <%=f.submit'Envoyer', class: "btn btn-primary mt-3"%>
      <% end %>
    </div>
  </form>
</div>
