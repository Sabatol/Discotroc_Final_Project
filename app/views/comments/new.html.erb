<%= form_tag url_for(action: 'create'), method: "post" do %>
  <%= label_tag 'Content', "Contenu du commentaire" %> <br>
  <%= text_field_tag 'content'%> <br>
  <% if current_user.id == @deal.sender_id %>
    <%= hidden_field_tag 'comment_sender_id', current_user.id%> <br>
    <%= hidden_field_tag 'comment_receiver_id', @deal.receiver_id %> <br>
  <% else %>
    <%= hidden_field_tag 'comment_sender_id', current_user.id %> <br>
    <%= hidden_field_tag 'comment_receiver_id', @deal.sender_id %> <br>
  <% end %>
  <%= hidden_field_tag 'deal_id', @deal.id %> <br>
  <%= submit_tag "Envoyer" %>
<% end %>
