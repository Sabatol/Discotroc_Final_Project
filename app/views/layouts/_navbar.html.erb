<header class="header-section clearfix">
  <%= link_to root_path, class: "site-logo" do %>
    <%= image_tag "logo.png", :style => "margin-top: -15px"%>
  <% end %>
  <div class="header-right">
    <span>|</span>
    <div class="user-panel">
      <% if user_signed_in? %>
        <%= link_to "Mon profil", user_path(current_user.id), class: "login" %>
        <%= link_to "Se dÃ©connecter", destroy_session_path(:user), class: "register", :method => :get %>
      <% else %>
        <%= link_to "Se connecter", new_user_session_path, class: "login" %>
        <%= link_to "S'inscrire", new_user_registration_path, class: "register" %>
      <% end %>
    </div>
  </div>
  <ul class="main-menu">
    <li><%= link_to "Accueil", root_path%></li>
    <% if current_user != nil %>
      <li><%= link_to "Ajouter un disque", new_user_user_library_path(current_user.id)%></li>
    <% else %>
      <li><%= link_to "Voir les disques", discs_path %></li>
    <% end %>
    <li><%= link_to "Espace Troc", user_libraries_path%></li>
    <li><a href="#">Temporaire</a>
      <% if user_signed_in? && current_user.is_admin? == true %>
        <ul class="sub-menu">
          <li><%= link_to "Voir les deals", deals_path%></li>
          <li><%#= link_to "Voir les deals PM", deal_pms_path%></li>
          <li><%#= link_to "Voir les deals contents", deal_contents_path%></li>
          <li><%= link_to "Voir les disques", discs_path%></li>
          <li><%= link_to "Voir les collections", user_libraries_path%></li>
        </ul>
      <% else %>
        <ul class="sub-menu">
          <li class="divider"></li>
          <li><%= link_to "Voir les disques", discs_path%></li>
          <li><%= link_to "Voir les trocs en cours", deals_path%></li>
        </ul>
      <%end %>
    </li>
    <li><%= link_to "Blog", articles_path%></li>
  </ul>
</header>
<!-- Header section end -->
